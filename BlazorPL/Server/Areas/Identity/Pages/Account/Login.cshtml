@page "/login"
@model LoginModel

@{
    ViewData["Title"] = "Bejelentkezés";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Email:</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Jelszó:</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-around">
                    <button type="submit" class="btn btn-primary">Bejelentkezés</button>
                </div>
                <div class="form-group d-flex justify-content-around">
                    <button type="button" class="btn btn-primary">Mégse</button>
                </div>
                <hr />
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Elfelejtetted a jelszavad?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nincs felhasználód? Csinálj egyet.</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Nem kaptad meg a verifikációs emailt?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
